<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="recycler_cities_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/recycler_item_text_size</item>
        <item name="android:padding">@dimen/recycler_item_padding</item>
    </style>

    <style name="card_style_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">@dimen/margin_card_view</item>
        <item name="cardCornerRadius">@dimen/radius_card_view</item>
    </style>
</resources>